<body >

  <div id="svgContainer">
  <span>
<svg xmlns="http://www.w3.org/2000/svg" version="1.2" x="20" width="30" height="30">
	<!--<polygon points="0,0 10,5 0,10" onmouseover="mouseOverHandler(event)" onmouseout="mouseOutHandler(event)">
	</polygon>-->
	<path d="M20 0 L20 10 L30 5 Z" class="svgFill" onclick="arrowClickHandler(event)" onmouseover="mouseOverHandler(event)" onmouseout="mouseOutHandler(event)">
</svg>
 </span>
   </div>
  
<script type='text/javascript'>//<![CDATA[
var expand = false;
function initialize() 
{
var xmlns = 'http://www.w3.org/2000/svg';
var container = document.getElementById('svgContainer');
var svg = document.createElementNS(xmlns, 'svg');
svg.setAttribute('xmlns', xmlns);
svg.setAttribute('version', '1.2');
    var g = document.createElementNS (xmlns, 'g');
//g.setAttributeNS(null, "transform", "rotate(45 50 50)");
    svg.appendChild(g);
    container.appendChild(svg);
                
var pathArrowRight = document.createElementNS (xmlns, 'path');
pathArrowRight.setAttribute('d', 'M20 0 L20 10 L30 5 Z');
pathArrowRight.addEventListener('click', arrowClickHandler); // I attach an handler here
//pathArrowRight.setAttributeNS(null, "transform", "rotate(45)");
g.appendChild(pathArrowRight);
/*var pathArrowDown = document.createElementNS (xmlns, 'path');
pathArrowDown.setAttribute('d', 'M0 0 L10 0 L5 10 Z');
g.appendChild(pathArrowDown);*/
}

function arrowClickHandler(e) 
{
if(expand)
{
//e.target.setAttributeNS(null, "transform", "rotate(0)");
e.target.setAttribute('d', 'M20 0 L20 10 L30 5 Z');
}
else
{
//e.target.setAttributeNS(null, "transform", "rotate(90)");
e.target.setAttribute('d', 'M20 0 L30 0 L25 10 Z');
}
expand = !expand;
    
}

function mouseOverHandler(event)
{
//event.target.setAttributeNS(null, "transform", "rotate(45)");
//event.target.setAttribute('d', 'M20 0 L30 0 L25 10 Z');
}

function mouseOutHandler(event)
{
//event.target.setAttributeNS(null, "transform", "rotate(0)");
//event.target.setAttribute('d', 'M20 0 L20 10 L30 5 Z');
}



//]]> 

</script>
  
</body>

</html>
