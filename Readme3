function keyDownHandler(event)
		{
			 if(event.keyCode === 13) 
			 {
				 var arrID = ["txtID","txtHierarchy"];
				 var dgDemo = document.getElementById("dgDemo");
				 var filter = {};
				 var setting = {};
				 for(var count = 0;count < arrID.length ;count++)
				 {
					 var control = document.getElementById(arrID[count]);
					 if(control && control.value)
					 {
						 var key = control.getAttribute("field");
						 filter[key] = control.value;
						 setting[key] = {caseSensitive:true,multiline:false,matchType:new NSFilter().STARTS_WITH};
					 }
				 }
				 if(filter && Object.keys(filter).length > 0)
				 {
					 dgDemo.filter(filter,setting);
				 }
				 else
				 {
					 dgDemo.resetFilter();
				 }
				 /*var filter = [];
				 var setting = {};
				 for(var count = 0;count < arrID.length ;count++)
				 {
					 var control = document.getElementById(arrID[count]);
					 if(control && control.value)
					 {
						 var item = {};
						 var key = control.getAttribute("field");
						 item[key] = control.value;
						 filter.push(item);
						 setting[key] = {caseSensitive:true,multiline:false,matchType:new NSFilter().STARTS_WITH};
					 }
				 }
				 if(filter && filter.length > 0)
				 {
					 dgDemo.filter(filter,setting);
				 }
				 else
				 {
					 dgDemo.resetFilter();
				 }*/
			 }
		}
