nsGrid.__flattenHierarchicalSource = function(source,arrReturn)
{
	if(!arrReturn)
	{
		arrReturn = [];
	}
	if(source)
	{
		var length = source.length;
		for (var count = 0;count < length;count++)
		{
			var item = source[count];
			arrReturn.push(item);
			if(item[this.__childField] && item[this.__childField].length > 0)
			{
				this.__flattenHierarchicalSource(item[this.__childField],arrReturn);
			}
		}
	}
	return arrReturn;
};
