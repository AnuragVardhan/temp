$scope.filterRenderer = function(colItem,colIndex)
	{
		var htmlText = "";
		if(colItem)
		{
			var field = colItem["dataField"];
			htmlText = "<div class='filterContainer'><input id='txt" + field + "' type='text' field='" + field + "' class='filter' " +
					   " onchange='angular.element(this).scope().changeHandler(this)'/></div>";
		}
		return htmlText;
	};
	
	$scope.changeHandler = function(element)
	{
		$scope.filterGrid();
	};
	
	$scope.filterGrid = function()
	{
		var arrID = ["#txthierarchy","#txtsupervisor","#txtemployee"];
		 //var filter = [];
		 var filter = {};
		 var setting = {};
		 for(var count = 0;count < arrID.length ;count++)
		 {
			 var control = document.querySelector(arrID[count]);
			 if(control && control.value)
			 {
				 //var item = {};
				 var key = control.getAttribute("field");
				 filter[key] = control.value;
				 //item[key] = control.value;
				 setting[key] = {caseSensitive:false,multiline:false,matchType:new NMFilter().CONTAINS};
				 //filter.push(item);
			 }
		 }
		 //if(filter && filter.length > 0)
		 if(filter && Object.keys(filter).length > 0)
		 {
			 var data = {};
			 data.filter = filter; 
			 data.setting = setting; 
			 sharedService.broadCast("filter",data);
		 }
		 else
		 {
			 sharedService.broadCast("resetFilter");
		 }
	};
