this.clearFilters = function() 
	{
		 for(var field in this.__objControl)
		 {
			 var control = this.__objControl[field];
			 if(control && control.value)
			 {
				 control.value = "";
			 }
		 }
	};
		this.__nsToolTipInElement = null;
