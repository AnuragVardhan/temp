if(this.__divVirtualScrollParent)
	{
		this.__divVirtualScrollParent.scrollTop = 0;
	}
	
	var rect = this.getBoundingClientRect();
			var availableHeight = rect.height;
			
			this.__getListDetailFilter = function(dataField)
	{
		var self = this;
		var itemRenderer = function(item,labelField,fieldIndex,isDisabled,listItem)
		{
			if(item)
			{
				var divRenderer = self.util.createDiv(colID + "filterListContainer" + item["id"] ,"nsFilterListRenderer");
				var label = self.util.createElement("label");
				var checkBox = self.util.createElement("input",null,"nsFilterListRendererCheckBox");
				checkBox.setAttribute("type","checkbox");
				label.appendChild(checkBox);
				var spanText = self.util.createElement("span",null,"nsFilterListRendererText");
				spanText.appendChild(document.createTextNode(item[labelField]));
				label.appendChild(spanText);
				divRenderer.appendChild(label);
				return divRenderer;
			}
			return null;
		};
		var txtInputChangeHandler = function()
		{
			clearTimeout(self.__interval);
			self.__interval = setTimeout(function(){
					handleListFilter();
				}, self.SEARCH_INTERVAL);
		};
		var handleListFilter = function()
		{
			var item = null;
			var text = null;
			var text = txtFilter.value;
			if(text === "")
			{
				lstFilter.resetFilter();
			}
			else
			{
				lstFilter.filter(text);
			}
		};
		var objPrev = this.__objAdvancedFilterSetting[dataField];
		var colID = this.__getRendererID(dataField);
		var divDetailFilterContainer = this.__nsPopUp.getPopUp();
		var divTextInput = this.util.createDiv(colID + "detailFilterTextInputContainer","nsFilterLineContainer");
		divTextInput.setAttribute("style","height:29px;");
		var txtFilter = this.util.createElement("input",colID + "detailFilterTextInput","nsFilterTextInput");
		txtFilter.setAttribute("placeholder", "Search...");
		if(objPrev && objPrev["textInputText"])
		{
			txtFilter.value = objPrev["textInputText"];
		}
		this.util.addEvent(txtFilter,"keyup",txtInputChangeHandler);
		var divSearch = this.util.getSearchTextBox(txtFilter);
		divSearch.style.width = "96%";
		divTextInput.appendChild(divSearch);
		divDetailFilterContainer.appendChild(divTextInput);
		
		var divSelectAll = this.util.createDiv(colID + "detailFilterSelectAllContainer","nsFilterLineContainer");
		divSelectAll.setAttribute("style","height:29px;");
		var label = self.util.createElement("label");
		var checkBox = self.util.createElement("input",null,"nsFilterListRendererCheckBox");
		checkBox.setAttribute("type","checkbox");
		label.appendChild(checkBox);
		var spanText = self.util.createElement("span",null,"nsFilterListRendererText");
		spanText.appendChild(document.createTextNode("Select All"));
		label.appendChild(spanText);
		divDetailFilterContainer.appendChild(label);
		
		var arrSource = this.__getUniqueValues(this.__nsGrid.__objGrid.__getFlatSource(),dataField);
		var divList = this.util.createDiv(colID + "detailFilterListContainer");
		var lstFilter = this.util.createElement("ns-List",colID + "detailFilterList","nsFilterList");
		divList.appendChild(lstFilter);
		divDetailFilterContainer.appendChild(divList);
		var setting = {labelField:"label",enableVirtualScroll:true,enableDragDrop:false,enableDragByHandle:false,enableMultipleSelection:true,enableKeyboardNavigation:false,
					   customScrollerRequired:false,enableMouseHover:true,enableMouseHoverAnimation:false,itemRenderer:itemRenderer.bind(this)};
		setting["dataSource"] = arrSource;
		lstFilter.setSetting(setting);
		if(this.__enableApply)
		{
			this.__createApplySection.bind(this)(colID,divDetailFilterContainer,null,null);
		}
		else
		{
			//lstFilter.util.addEvent(lstFilter,lstFilter.ITEM_SELECTED,itemSelectHandler);
			//lstFilter.util.addEvent(lstFilter,lstFilter.ITEM_UNSELECTED,itemUnSelectHandler);
			
			//this.util.addEvent(cmbFilter,"change",handleNumberFilter);
			//this.util.addEvent(txtFilter,"keyup",txtInputChangeHandler);
		}
		
		
	};
